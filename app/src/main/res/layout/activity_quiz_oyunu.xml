<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Oyunlar.QuizOyunu">

    <TextView
        android:id="@+id/textView33"
        android:layout_width="305dp"
        android:layout_height="129dp"
        android:layout_marginTop="48dp"
        android:text="IF YOU'RE READY, LET'S START!!"
        android:textAlignment="center"
        android:textColor="#CC8217"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifKar" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifKar"
        android:layout_width="293dp"
        android:layout_height="206dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/welcome___kopya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageStart"
        android:layout_width="250dp"
        android:layout_height="182dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView34"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/next" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="181dp"
        android:layout_height="63dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="150dp"
        android:text="START"
        android:textAlignment="textEnd"
        android:textColor="#C4000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageStart"
        app:layout_constraintEnd_toStartOf="@+id/imageStart"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        app:layout_constraintVertical_bias="0.989" />
</androidx.constraintlayout.widget.ConstraintLayout>