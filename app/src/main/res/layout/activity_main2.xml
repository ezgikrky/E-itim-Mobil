<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sozluk"
    tools:context=".Oyunlar.Sözlük.MainActivity2">

    <ImageButton
        android:id="@+id/imageIlerle"
        android:layout_width="217dp"
        android:layout_height="76dp"
        android:layout_marginBottom="236dp"
        android:background="#B81414"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/sozlukb" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="128dp"
        android:layout_height="39dp"
        android:text="İLERLE"
        android:textAlignment="center"
        android:textColor="#700B0B"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageIlerle"
        app:layout_constraintEnd_toEndOf="@+id/imageIlerle"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageIlerle"
        app:layout_constraintTop_toTopOf="@+id/imageIlerle"
        app:layout_constraintVertical_bias="0.486" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="313dp"
        android:layout_height="90dp"
        android:layout_marginTop="188dp"
        android:text="BİLGİ SİZİ BEKLER..."
        android:textAlignment="center"
        android:textColor="#700B0B"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>